{
    "id": "python-service",
    "name": "Python Service",
    "description": "Python application with Gunicorn, health checks, metrics and advanced Kubernetes options.",
    "fields": [
        {
            "key": "service_name",
            "label": "Service Name",
            "type": "text",
            "required": true,
            "placeholder": "my-python-api",
            "description": "Unique name for your Python service (DNS compatible)"
        },
        {
            "key": "environment",
            "label": "Environment",
            "type": "select",
            "options": [
                "dev",
                "stg",
                "prd"
            ],
            "default": "dev",
            "required": true,
            "description": "Deployment environment"
        },
        {
            "key": "python_version",
            "label": "Python Version",
            "type": "select",
            "options": [
                "3.9",
                "3.10",
                "3.11",
                "3.12"
            ],
            "default": "3.11"
        },
        {
            "key": "port",
            "label": "Application Port",
            "type": "number",
            "default": 8000,
            "required": true
        },
        {
            "key": "gunicorn_workers",
            "label": "Gunicorn Workers",
            "type": "number",
            "default": 4,
            "min": 1,
            "max": 32
        },
        {
            "key": "cpu_limit",
            "label": "CPU Limit",
            "type": "text",
            "placeholder": "500m",
            "default": "500m",
            "description": "Maximum CPU allocation (custom values allowed)"
        },
        {
            "key": "memory_limit",
            "label": "Memory Limit",
            "type": "text",
            "placeholder": "512Mi",
            "default": "512Mi",
            "description": "Maximum memory allocation (custom values allowed)"
        },
        {
            "key": "replicas",
            "label": "Replicas",
            "type": "number",
            "default": 2,
            "min": 1,
            "max": 20
        },
        {
            "key": "enable_metrics",
            "label": "Enable Prometheus Metrics",
            "type": "boolean",
            "default": true
        },
        {
            "key": "enable_health_check",
            "label": "Enable Health Checks",
            "type": "boolean",
            "default": true
        },
        {
            "key": "enable_ingress",
            "label": "Enable Ingress",
            "type": "boolean",
            "default": false
        },
        {
            "section": "Advanced Options"
        },
        {
            "key": "request_cpu",
            "label": "CPU Request",
            "type": "text",
            "placeholder": "250m",
            "default": "250m",
            "description": "Guaranteed CPU reservation (custom values allowed)"
        },
        {
            "key": "request_memory",
            "label": "Memory Request",
            "type": "text",
            "placeholder": "256Mi",
            "default": "256Mi",
            "description": "Guaranteed memory reservation (custom values allowed)"
        },
        {
            "key": "autoscaling_enabled",
            "label": "Enable Autoscaling (HPA)",
            "type": "boolean",
            "default": false
        },
        {
            "key": "autoscaling_min_replicas",
            "label": "Autoscaling Min Replicas",
            "type": "number",
            "default": 2,
            "min": 1,
            "max": 20
        },
        {
            "key": "autoscaling_max_replicas",
            "label": "Autoscaling Max Replicas",
            "type": "number",
            "default": 6,
            "min": 1,
            "max": 50
        },
        {
            "key": "autoscaling_target_cpu",
            "label": "Autoscaling CPU Target (%)",
            "type": "number",
            "default": 70,
            "min": 20,
            "max": 90
        },
        {
            "key": "enable_service_monitor",
            "label": "Enable ServiceMonitor (Prometheus Operator)",
            "type": "boolean",
            "default": false
        },
        {
            "key": "log_level",
            "label": "Log Level",
            "type": "select",
            "options": [
                "DEBUG",
                "INFO",
                "WARN",
                "ERROR"
            ],
            "default": "INFO"
        },
        {
            "key": "enable_tracing",
            "label": "Enable Distributed Tracing",
            "type": "boolean",
            "default": false
        },
        {
            "key": "tracing_endpoint",
            "label": "Tracing Endpoint",
            "type": "text",
            "placeholder": "http://otel-collector:4317"
        },
        {
            "key": "enable_pdb",
            "label": "Enable PodDisruptionBudget",
            "type": "boolean",
            "default": true
        },
        {
            "key": "pdb_min_available",
            "label": "PDB Min Available",
            "type": "number",
            "default": 1
        },
        {
            "key": "extra_env_vars",
            "label": "Extra Environment Variables",
            "type": "keyvalue"
        },
        {
            "key": "allow_unsafe_features",
            "label": "Enable Unsafe Dev Features",
            "type": "boolean",
            "default": false,
            "description": "Enable debugging features (NOT for production)"
        }
    ]
}