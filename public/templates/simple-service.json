{
    "id": "simple-service",
    "name": "Simple Service",
    "description": "Basic Kubernetes deployment for a generic container",
    "fields": [
        {
            "key": "service_name",
            "label": "Service Name",
            "type": "text",
            "required": true,
            "placeholder": "my-service"
        },
        {
            "key": "environment",
            "label": "Environment",
            "type": "select",
            "options": [
                "dev",
                "stg",
                "prd"
            ],
            "default": "dev",
            "required": true
        },
        {
            "key": "image",
            "label": "Container Image",
            "type": "select-or-custom",
            "options": [
                "nginx:latest",
                "nginx:alpine",
                "httpd:latest",
                "httpd:alpine",
                "busybox:latest",
                "custom"
            ],
            "default": "nginx:latest",
            "required": true,
            "customPlaceholder": "your-registry/your-image:tag"
        },
        {
            "key": "port",
            "label": "Container Port",
            "type": "number",
            "default": 80,
            "required": true
        },
        {
            "key": "replicas",
            "label": "Replicas",
            "type": "number",
            "default": 1,
            "min": 1,
            "max": 20
        },
        {
            "key": "cpu_limit",
            "label": "CPU Limit",
            "type": "text",
            "default": "250m",
            "placeholder": "250m"
        },
        {
            "key": "memory_limit",
            "label": "Memory Limit",
            "type": "text",
            "default": "256Mi",
            "placeholder": "256Mi"
        },
        {
            "key": "enable_ingress",
            "label": "Enable Ingress",
            "type": "boolean",
            "default": false
        },
        {
            "section": "Advanced Options"
        },
        {
            "key": "cpu_request",
            "label": "CPU Request",
            "type": "text",
            "default": "100m",
            "placeholder": "100m"
        },
        {
            "key": "memory_request",
            "label": "Memory Request",
            "type": "text",
            "default": "128Mi",
            "placeholder": "128Mi"
        },
        {
            "key": "enable_hpa",
            "label": "Enable Autoscaling (HPA)",
            "type": "boolean",
            "default": false
        },
        {
            "key": "hpa_min_replicas",
            "label": "HPA Min Replicas",
            "type": "number",
            "default": 1,
            "min": 1,
            "max": 20
        },
        {
            "key": "hpa_max_replicas",
            "label": "HPA Max Replicas",
            "type": "number",
            "default": 5,
            "min": 1,
            "max": 50
        },
        {
            "key": "hpa_cpu_target",
            "label": "HPA CPU Target (%)",
            "type": "number",
            "default": 70,
            "min": 20,
            "max": 90
        },
        {
            "key": "enable_service_monitor",
            "label": "Enable ServiceMonitor",
            "type": "boolean",
            "default": false
        },
        {
            "key": "log_level",
            "label": "Log Level",
            "type": "select",
            "options": [
                "DEBUG",
                "INFO",
                "WARN",
                "ERROR"
            ],
            "default": "INFO"
        },
        {
            "key": "extra_env_vars",
            "label": "Extra Environment Variables",
            "type": "keyvalue"
        },
        {
            "key": "enable_pdb",
            "label": "Enable PodDisruptionBudget",
            "type": "boolean",
            "default": true
        },
        {
            "key": "pdb_min_available",
            "label": "PDB Min Available",
            "type": "number",
            "default": 1,
            "min": 1
        }
    ]
}